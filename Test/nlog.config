<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!--<target name="logfile" xsi:type="File" fileName="file.txt" />-->
    <!--<target name="logfile" xsi:type="File" fileName="${basedir}/logs/${shortdate}.log" layout="${longdate} ${level:uppercase=true} ${event-context:item=Action} ${message} ${event-context:item=Amount} ${stacktrace}" />-->
    <target name="logfile" xsi:type="File" fileName="${basedir}/logs/${shortdate}.log" encoding="utf-8" />

    <target name="logconsole" xsi:type="Console" />
  </targets>

  <rules>
    <!--TRACE,DEBUG,INFO,WARN,ERROR,FATAL-->

    <!--<logger name="*" minlevel="Info" writeTo="logconsole" />-->
    <logger name="*" minlevel="TRACE" writeTo="logconsole" />

    <!--<logger name="*" minlevel="Debug" writeTo="logfile" />-->
    <logger name="*" minlevel="TRACE" writeTo="logfile" />
  </rules>
</nlog>